{
  "kind": "collectionType",
  "collectionName": "order_details",
  "info": {
    "singularName": "order-detail",
    "pluralName": "order-details",
    "displayName": "Order Detail",
    "description": "Details of customer orders"
  },
  "options": {
    "draftAndPublish": false
  },
  "attributes": {
    "createdAt": {
      "type": "datetime"
    },
    "updatedAt": {
      "type": "datetime"
    },
    "orderItems": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order-item.order-item",
      "mappedBy": "orderDetail"
    },
    "total": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "pending",
        "processing",
        "shipped",
        "delivered",
        "cancelled"
      ],
      "default": "pending"
    },
    "shippingAddress": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::address.address"
    },
    "paymentDetail": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::payment-detail.payment-detail",
      "inversedBy": "orderDetail"
    },
    "orderNumber": {
      "type": "string",
      "unique": true
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "orders"
    },
    "razorpayOrderId": {
      "type": "text"
    },
    "razorpaySignature": {
      "type": "text"
    },
    "razorpayPaymentId": {
      "type": "text"
    }
  }
}
